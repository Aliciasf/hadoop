#!/usr/bin/env bash
# Launch an EC2 cluster of Hadoop instances, start Hadoop, and connect to the master.

# Import variables
bin=`dirname "$0"`
bin=`cd "$bin"; pwd`

if ! "$bin"/launch-hadoop-cluster ; then
  exit $?
fi

echo "Press return to continue."
read dummy

echo "Waiting before trying to connect..."
sleep 30

"$bin"/start-hadoop
